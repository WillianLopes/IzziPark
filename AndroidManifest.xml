<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="br.com.izzipark"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk android:minSdkVersion="8" android:targetSdkVersion="17" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    
    <application
        android:allowBackup="true"
        android:icon="@drawable/car"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        
        <activity
            android:name="views.LoginActivity"
            android:label="@string/app_name"
            android:screenOrientation="portrait" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        
        <activity
            android:name="views.MainActivity"
            android:label="@string/app_name"
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name="views.CadastrarUsuario"
            android:label="@string/app_name"
            android:screenOrientation="portrait" >
        </activity>
        
        <!-- ACTIVITIES MENU -->
        <activity
            android:name="views.MenuActivity"
            android:label="@string/app_name"
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name="views.SobreActivity"
            android:label="@string/app_name"
            android:screenOrientation="portrait" >
        </activity>
        
        <!-- ACTIVITIES CLIENTE -->
        <activity
            android:name="views.ParkActivity"
            android:label="@string/app_name"
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name="views.ParkDetalhes"
            android:label="@string/app_name" 
            android:screenOrientation="portrait">
        </activity>
        <activity
            android:name="views.ParkCreate"
            android:label="@string/title_activity_park_create"
            android:windowSoftInputMode="adjustPan"
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name="views.ParkUpdate"
            android:label="@string/title_activity_park_update"
            android:windowSoftInputMode="adjustPan"
            android:screenOrientation="portrait"  > 
         </activity>    
         <activity
            android:name="views.ParkSearch"
            android:label="@string/menu_search_park"
            android:windowSoftInputMode="adjustPan"
            android:screenOrientation="portrait"  > 
         </activity>  

    </application>

</manifest>